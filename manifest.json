{
  "manifest_version": 2,

  "name": "Jira Wider Columns",
  "description": "This extension allows to adjust Jira columns width with help of arrows",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["https://*.atlassian.net/secure/*"],
    "css": ["bg.css"],
    "js": ["bg.js"]
  }]
}
